<!DOCTYPE html>
<html>
  <head>
    <title>Omniauth_test</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">

  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

  <!-- bootstrap pour faire apparaitre les icons -->
  </head>
  <body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <h1><%= link_to root_path do %>Omniauhtapp<% end %></h1>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

        <ul class ="nav nabr-nav narvbar-right">
          <% if current_user %>
            <li>Signed in as: <%= current_user.name %> - <%= image_tag(@auth['info']['image'], width: '50', class: 'image_circle') %></li>
            <li><%= link_to "sign Out", 'sign_out', method: :delete %></li>
          <% else %>
            <li><%= link_to "auth/facebook" do %><%= image_tag('facebook.png', width: '40', height: '40', class: 'img-circle') %><% end %></li>
            <li><%= link_to "auth/twitter" do %><%= image_tag('twitter.png', width: '40', height: '40', class: 'image_circle') %><% end %></li>
            <li><%= link_to "auth/github" do %><%= image_tag('github.png', width: '40', height: '40', class: 'image_circle') %><% end %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <% flash.each do |key, value| %>
    <div class="alert alert_info"><%= value %></div>
  <% end %>

<!-- affichage de tout ce que l'on a pu obtenir avec le provider -->
  <% if current_user %>
    <div class="text-center">
      <h1>Welcome, <%= current_user.name %></h1>
      <h1>Logged In whith -> <strong><em><%= @auth['provider'].capitalize %></em></strong></h1>
    </div>
  <% end %>

  </body>
</html>
